        }
    }
    
    // Add the wallet unlock dialog
    wallet-dialog := WalletUnlockDialog {
        show: root.show-wallet-dialog;
        
        unlock-wallet(password) => {
            root.unlock-wallet(password);
        }
        
        close => {
            root.close-wallet-dialog();
        }
    }
} 