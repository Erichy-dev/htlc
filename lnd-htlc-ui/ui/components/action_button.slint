import { Button } from "std-widgets.slint";

export component ActionButton {
    in property <string> text;
    in property <bool> is-active: false;
    callback clicked();
    
    TouchArea {
        width: 100%;
        clicked => { root.clicked(); }
        
        Rectangle {
            width: 100%;
            height: 38px;
            background: root.is-active ? #5294e2 : transparent;
            border-radius: 4px;
            
            Text {
                x: 10px;
                text: root.text;
                color: root.is-active ? white : #e0e0e0;
                font-size: 14px;
                font-weight: root.is-active ? 600 : 400;
                vertical-alignment: center;
            }
        }
    }
} 