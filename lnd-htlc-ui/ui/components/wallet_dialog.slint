import { Button, LineEdit, VerticalBox } from "std-widgets.slint";

export component WalletUnlockDialog inherits Rectangle {
    in property <bool> show: true;
    callback unlock-wallet(string); // password
    callback close();
    
    width: 400px;
    height: 240px;
    
    visible: show;
    
    Text {
        text: "Wallet Unlock Required";
        font-size: 18px;
        font-weight: 500;
        horizontal-alignment: center;
    }
    
    if (!show): Rectangle {
        Text {
            text: "Wallet already unlocked";
            color: #20c997;
            font-size: 14px;
            horizontal-alignment: center;
        }
    }
    
    if (show): VerticalLayout {
        padding: 16px;
        spacing: 16px;
        
        Text {
            text: "Enter your password to unlock the wallet";
            horizontal-alignment: center;
        }
        
        password := LineEdit {
            placeholder-text: "Password";
            input-type: InputType.password;
            horizontal-alignment: center;
        }
        
        HorizontalLayout {
            alignment: center;
            spacing: 12px;
            
            Button {
                text: "Cancel";
                clicked => { root.close(); }
            }
            
            Button {
                text: "Unlock";
                primary: true;
                clicked => { root.unlock-wallet(password.text); }
            }
        }
    }
} 