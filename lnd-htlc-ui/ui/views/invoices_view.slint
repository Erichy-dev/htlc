import { ScrollView, VerticalBox, StandardListView, Button } from "std-widgets.slint";

export struct InvoiceDetails {
    memo: string,
    r_hash: string,
    value: string,
    state: string,
    creation_date: string,
    is_own_invoice: bool,
    payment_request: string,
}

export component InvoicesView inherits VerticalBox {
    // Callback to signal that invoices should be fetched or refreshed
    callback list-invoices-requested();
    // Callback to settle an invoice
    callback settle-custom-invoice(string);
    // Callback to copy payment request to clipboard
    callback copy-to-clipboard(string);
    // Property to hold the list of invoices
    in-out property <[InvoiceDetails]> invoices: [];

    Text {
        text: invoices.length + " invoices";
        font-size: 24px;
        font-weight: 700;
        horizontal-alignment: center;
        padding-bottom: 20px;
    }

    if invoices.length == 0 : VerticalBox {
        Text {
            text: "No invoices found";
            horizontal-alignment: center;
            vertical-alignment: center;
            color: #888;
            font-size: 16px;
        }
    }
    
    if invoices.length > 0 : Rectangle {
        background: #2a2a2a;
        border-radius: 8px;

        ScrollView {
            vertical-stretch: 1;
            horizontal-stretch: 1;
        
            VerticalLayout {
                padding: 16px;
                spacing: 12px;

                for invoice_item in invoices: Rectangle {
                    padding: 10px;
                    height: 120px;
                    background: invoice_item.state == "OPEN" ? #2d3b2d : 
                               invoice_item.state == "PENDING" ? #3b3b2d :
                               invoice_item.state == "SETTLED" ? #2d2d3b :
                               invoice_item.state == "CANCELED" ? #3b2d2d :
                               invoice_item.state == "ACCEPTED" ? #2d3b3b :
                               #2a2a2a;
                    border-radius: 8px;
    
                    VerticalLayout {
                        spacing: 12px;
                        padding: 16px;
    
                        HorizontalLayout {
                            spacing: 16px;
    
                            VerticalLayout {
                                Text { 
                                    text: "Memo: " + invoice_item.memo;
                                    font-size: 18px;
                                    font-weight: 600;
                                    color: #ffffff;
                                }
                            }
    
                            Rectangle {
                                width: 1px;
                                background: #404040;
                            }
    
                            VerticalLayout {
                                alignment: center;
                                Text {
                                    text: invoice_item.value + " sats";
                                    font-size: 20px;
                                    font-weight: 700;
                                    color: #5294e2;
                                }
                                Text {
                                    text: invoice_item.creation_date;
                                    font-size: 12px;
                                    color: #808080;
                                }
                            }

                            if invoice_item.is_own_invoice && invoice_item.state == "OPEN":
                                Rectangle {
                                    padding: 12px;
                                    background: #f0ad4e;
                                    border-radius: 8px;
                                    width: 70px;
                                    height: 30px;
                                    
                                    Text {
                                        font-size: 16px;
                                        
                                        text: "Pending";
                                    }
                                }
                            
                            if !invoice_item.is_own_invoice && invoice_item.state == "OPEN":
                                Rectangle {
                                    padding: 12px;
                                    background: #0275d8;
                                    border-radius: 8px;
                                    width: 60px;
                                    height: 30px;
                                    
                                    Text {
                                        font-size: 16px;
                                        
                                        text: "Pay";
                                    }
                                }
                            
                                if invoice_item.is_own_invoice && invoice_item.state == "ACCEPTED":
                                    TouchArea {
                                        HorizontalLayout {
                                            alignment: end;
                                            
                                            Rectangle {
                                                padding: 12px;
                                                background: #5cb85c;
                                                border-radius: 8px;
                                                width: 65px;
                                                height: 30px;
    
                                                Text {
                                                    font-size: 16px;
                                                    
                                                    text: "Settle";
                                                }
                                            }
                                        }
                                        clicked => { root.settle-custom-invoice(invoice_item.r_hash); }
                                    }
                                if invoice_item.state == "SETTLED":
                                    Rectangle {
                                        padding: 12px;
                                        background: #5cb85c;
                                        border-radius: 8px;
                                        width: 75px;
                                        height: 30px;
                                        
                                        Text {
                                            font-size: 16px;
                                            
                                            text: "Settled";
                                        }
                                    }
                            
                                if invoice_item.state == "CANCELED":
                                    Rectangle {
                                        padding: 12px;
                                        background: #d9534f;
                                        border-radius: 8px;
                                        width: 75px;
                                        height: 30px;

                                        Text {
                                            font-size: 16px;
                                            
                                            text: "Canceled";
                                        }
                                    }
                        }
                        
                        Text {
                            text: "Hash: " + invoice_item.r_hash;
                            font-size: 12px;
                            color: #e4e0e0;
                            opacity: 0.7;
                        }

                        HorizontalLayout {
                            spacing: 10px;

                            Text {
                                text: "Payment Request:";
                                font-size: 12px;
                                color: #e4e0e0;
                                opacity: 0.7;
                                width: 100px;
                            }

                            Text {
                                text: invoice_item.payment_request;
                                font-size: 5px;
                                color: #e4e0e0;
                                opacity: 0.7;
                                width: 200px;
                                height: 20px;
                                wrap: TextWrap.word-wrap;
                                overflow: TextOverflow.clip;
                            }

                            TouchArea {
                                width: 24px;
                                height: 24px;
                                
                                Rectangle {
                                    background: #444;
                                    border-radius: 4px;
                                    width: 24px;
                                    height: 24px;
                                    
                                    Text {
                                        text: "ðŸ“‹";
                                        font-size: 16px;
                                    }
                                }
                                
                                clicked => {
                                    // Copy payment request to clipboard
                                    root.copy-to-clipboard(invoice_item.payment_request);
                                }
                            }
                        }
                    }   
    
                }
            }
        }
    }
}
