import { Button, LineEdit, VerticalBox } from "std-widgets.slint";

export component CreateChannelView inherits Rectangle {
    callback connect-peer(string, string, string); // pubkey, host, port
    
    VerticalLayout {
        padding: 24px;
        spacing: 16px;
        
        Text {
            text: "Connect to Lightning Node";
            font-size: 24px;
            font-weight: 600;
            color: #e0e0e0;
        }
        
        Rectangle { height: 1px; background: #3a3a3a; }
        
        VerticalLayout {
            spacing: 16px;
            
            VerticalLayout {
                spacing: 6px;
                
                Text {
                    text: "Node Public Key";
                    color: #bbbbbb;
                }
                
                pubkey := LineEdit {
                    placeholder-text: "Enter the 66-character public key";
                }
            }
            
            HorizontalLayout {
                spacing: 16px;
                
                VerticalLayout {
                    spacing: 6px;
                    
                    Text {
                        text: "Host";
                        color: #bbbbbb;
                    }
                    
                    host := LineEdit {
                        placeholder-text: "IP address or hostname";
                    }
                }
                
                VerticalLayout {
                    spacing: 6px;
                    
                    Text {
                        text: "Port";
                        color: #bbbbbb;
                    }
                    
                    port := LineEdit {
                        placeholder-text: "Default: 9735";
                        text: "9735";
                    }
                }
            }
            
            Rectangle { height: 8px; }
            
            Button {
                text: "Connect to Peer";
                primary: true;
                
                clicked => {
                    root.connect-peer(pubkey.text, host.text, port.text);
                }
            }
        }
    }
} 