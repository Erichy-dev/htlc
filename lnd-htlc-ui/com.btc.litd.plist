<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.btc.litd</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/litd</string> <!-- Assuming litd is in /usr/local/bin. Adjust if needed. -->
        <string>--network</string>
        <string>testnet</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>/tmp/com.btc.litd.stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/com.btc.litd.stderr.log</string>
</dict>
</plist>