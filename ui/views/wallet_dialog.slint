import { Button, LineEdit, VerticalBox } from "std-widgets.slint";

export component WalletUnlockDialog inherits Rectangle {
    callback unlock-wallet(string); // password
    
    width: 400px;
    height: 240px;
    
    Text {
        text: "Wallet Unlock Required";
        font-size: 18px;
        font-weight: 500;
        horizontal-alignment: center;
    }
    
    VerticalLayout {
        padding: 16px;
        spacing: 16px;
        
        Text {
            text: "Enter your password to unlock the wallet";
            horizontal-alignment: center;
        }
        
        password := LineEdit {
            placeholder-text: "Password";
            input-type: InputType.password;
            horizontal-alignment: center;
        }
        
        HorizontalLayout {
            alignment: center;
            spacing: 12px;
            
            Button {
                text: "Unlock";
                width: 100px;
                height: 34px;
                primary: true;
                clicked => { root.unlock-wallet(password.text); }
            }
        }
    }
} 